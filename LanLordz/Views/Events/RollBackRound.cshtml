@model LanLordz.Models.TournamentActionModel
@{
    var controller = this.ViewContext.Controller as LanLordzBaseController;
    ViewBag.Title = "Roll Back Round";
}
    <div class="EventsNavigator">@Html.ActionLink(controller.Config.SiteName + " Events", "Index") &gt; @Html.ActionLink(Model.Event.Title, "Details", new { id = Model.Event.EventID }) &gt; @Html.ActionLink(Model.Tournament.Title, "ViewTournament", new { id = Model.Tournament.TournamentID }) &gt; Roll Back Round</div>
    <h2>Roll Back Round</h2>
    @using (Html.BeginForm())
    {
     <text>
     @Html.AntiForgeryToken()
     Are you sure you would like to roll back the last round in the tournament?<br />
     This CANNOT be undone!<br /><br />
     <input type="submit" value="Yes, Roll Back" /> @Html.ActionLink("Cancel", "ViewTournament", new { id = Model.Tournament.TournamentID })
     </text>
   }
